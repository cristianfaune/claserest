<%= form_for(cat) do |f| %>
<% if cat.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(cat.errors.count, "error") %> prohibited this cat from being saved:</h2>
  <ul>
    <% cat.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="container">
    <div class="col-md-4 col-md-offset-4 form-group">
      <div class="well">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :age %>
        <%= f.text_field :age, id: :dog_age, class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :picture %>
        <%= f.file_field :picture, class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
</div>
<% end %>
